extends ../layout

block content
  form(method='POST', action='/auth/login')
    div.form-group
      label(for='user_email') User email
      input#user_email.form-control(type='email', placeholder='User email', name='email')
    div.form-group
      label(for='user_password') User password
      input#user_password.form-control(type='password', placeholder='User password', name='password')

    button.btn.btn-success(type='submit') Login
